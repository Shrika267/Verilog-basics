`timescale 1ns/1ns
module toggle_fsm_tb;
  reg clk=0;
  reg rst=1;
  reg btn=0;
  wire led;
  toggle_fsm uut(.clk(clk), .rst(rst), .btn(btn), .led(led));
  always #5 clk=~clk;
  initial
    begin
      #10 rst=0;
      #10 btn=1;
      #10 btn=0;
      #10 btn=1;
      #10 btn=0;
      #20 $finish;
    end
  initial
    begin
      $monitor("t=%0t | clk=%b | rst=%b | btn=%b | led=%b",$time,clk,rst,btn,led);
    end
endmodule
